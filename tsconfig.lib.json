{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",

    "moduleResolution": "bundler",
    "types": ["node"],

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "docs",
    "dist",
    "node_modules",
    "**/*.config.ts"
  ]
}